<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/send_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Procurar companhia"
        android:layout_gravity="bottom"
        android:textSize="16dp"
        android:padding="16dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:elevation="2dp"
        android:layout_margin="16dp"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_gravity="bottom"
        tools:context=".StartPinActivity" />

    <SeekBar
        android:id="@+id/seekBarMaxDistance"
        android:layout_width="319dp"
        android:layout_height="61dp"
        android:layout_gravity="top|left|center_horizontal|center"
        android:max="1000"
        android:min="10" />

    <TextView
        android:id="@+id/textViewMaxDistance"
        android:layout_width="84dp"
        android:layout_height="62dp"
        android:layout_gravity="right"
        android:gravity="left|center_vertical"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="317dp"
        android:layout_height="84dp"
        android:gravity="bottom|center_horizontal"
        android:text="Selecione a distância máxima do seu ponto final" />

</FrameLayout>